extends layouts/main-layout.pug

block content
    main
        if prods.length > 0
            .container
                each product in prods
                    article.card.my-5.py-4
                        .card-body
                            h1.card-title.text-center #{product.title}
                            img.card-img-top(src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60", alt="A book")
                            h2 $19.99
                            p.card-text A very interesting book about so many even more interesting content
                            button.btn.btn-success Add to Cart
        else
            .container
                article.card.my-5.py-4
                    .card-body.text-center
                        h1.card-title No Products
                        p.card-text.text-muted Be the first to add a product!
                        button.btn.btn-success Add Product