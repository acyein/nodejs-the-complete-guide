<main>
    {{#if hasProducts}}
        <div class="container">
            {{#each prods}}
            <article class="card my-5 py-4">
                <div class="card-body">
                    <h1 class="card-title text-center">{{ this.title }}</h1>
                    <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="A book" class="card-img-top">
                    <h2>$19.9</h2>
                    <p class="card-text">A very interesting book about so many even more interesting content</p>
                    <button class="btn btn-success">Add to Cart</button>
                </div>
            </article>
            {{/each}}
        </div>
    {{else}}
        <div class="container">
            <div class="article card my-5 py-4">
                <div class="card-body text-center">
                    <h1 class="card-title">No Products</h1>
                    <p class="card-text text-muted">Be the first to add a product!</p> 
                    <button class="btn btn-success">Add Product</button>
                </div>
            </div>
        </div>
    {{/if}}
</main>