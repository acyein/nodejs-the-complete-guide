<%- include('../partials/head.ejs') %> 
    <main>
        <% if (prods.length > 0) {%> 
            <div class="container">
                <div class="row">
                    <% for (let product of prods) { %> 
                        <div class="col-lg-4 col-md-6">
                            <article class="card shadow text-center my-5">
                                <div class="card-body text-center">
                                    <h1 class="card-title h3"><%= product.title %></h1>
                                </div>
                                <img class="product-preview card-img-top" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                <div class="card-body">
                                    <h2 class="h5">$<%= product.price %></h2>
                                    <p class="card-text"><%= product.description %></p>
                                    <a href="/admin/edit-product/<%= product.id %>?edit=true" role="button" class="btn btn-success mx-1">Edit</a>
                                    <form action="/admin/delete-product" method="POST" class="d-inline mx-1">
                                        <input type="hidden" name="productId" id="productId" value="<%= product.id %>">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </article>
                        </div>
                    <% } %> 
                </div>
            </div>
        <% } else { %> 
            <div class="container">
                <div class="article card my-5 py-4">
                    <div class="card-body text-center">
                        <h1 class="card-title">Coming Soon!</h1>
                        <p class="card-text text-muted">We need to get cracking</p> 
                        <img class="coming-soon" src="https://media.giphy.com/media/LW59O4ZL52C5ZwVyKd/giphy.gif" alt="Egg skating">
                    </div>
                </div>
            </div>
        <% } %> 
    </main>
<%- include('../partials/end.ejs') %> 