<%- include('../partials/head.ejs') %> 
    <main>
        <div class="container">
            <div class="row card my-5 py-4">
                <form action="/admin/add-product" method="POST" class="col-10 m-auto">
                    <div class="form-group text-center">
                        <h1>Add Product</h1>
                    </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="form-control m-auto">
                    </div>
                    <div class="form-group">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl" class="form-control m-auto">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step=".01" class="form-control m-auto">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" cols="30" s="5" class="form-control m-auto"></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
<%- include('../partials/end.ejs') %> 